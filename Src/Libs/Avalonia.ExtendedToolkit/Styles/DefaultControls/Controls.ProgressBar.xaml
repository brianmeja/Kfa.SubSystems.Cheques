<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Avalonia.ExtendedToolkit.Controls;assembly=Avalonia.ExtendedToolkit"
    xmlns:converters="clr-namespace:Avalonia.ExtendedToolkit.Converters;assembly=Avalonia.ExtendedToolkit"
    xmlns:System="clr-namespace:System;assembly=mscorlib">

  <!--just override avalonia style mahapp style not working
      perhabs of (?) LinearGradientBrush.Transform
  -->
    
  <Style Selector="ProgressBar">
    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray5}" />
    <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Controls.Border}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Highlight}" />
    <Setter Property="Maximum" Value="100" />
    <Setter Property="MinHeight" Value="10" />
    <Setter Property="MinWidth" Value="10" />
  </Style>

</Styles>