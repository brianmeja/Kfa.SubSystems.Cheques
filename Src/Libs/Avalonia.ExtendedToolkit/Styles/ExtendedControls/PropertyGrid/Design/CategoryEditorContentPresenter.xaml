<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:design="clr-namespace:Avalonia.ExtendedToolkit.Controls.PropertyGrid.Design;assembly=Avalonia.ExtendedToolkit"
    >
  <Style Selector="design|CategoryEditorContentPresenter">
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel>
          <ContentControl Template="{Binding Editor.InlineTemplate}"/>
          
          <ContentControl Template="{Binding Editor.ExtendedTemplate}"/>
        </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>

</Styles>
