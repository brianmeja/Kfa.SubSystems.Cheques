<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350" Height="350"
        x:Class="Kfa.SubSystems.Cheques.Views.LoginPage" SystemDecorations="BorderOnly"   
        Title="LoginPage" Width="500"
        Margin="10">
<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
      VerticalAlignment="Stretch" 
      HorizontalAlignment="Stretch">

  <TextBlock Text="LOGIN" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="28"  Margin="10" Classes="LabelBlock"/>
  <TextBlock Text="Username" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" FontSize="28"  Margin="10"/>
  <TextBlock Text="Password" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" FontSize="28"  Margin="10"/>
  <TextBox  Grid.Column="1" Grid.Row="1" MinWidth="200" FontSize="28"  Margin="10" Classes="EntryBlock"/>
  <TextBox  Grid.Column="1" Grid.Row="2" MinWidth="200" FontSize="28"  Margin="10" PasswordChar="*"/>
  <Button Content="LOGIN" HorizontalContentAlignment="Center" FontSize="28" Grid.Column="1" Grid.Row="3"  Margin="10"/>
  <Button Content="CLOSE" HorizontalContentAlignment="Center" FontSize="28" Grid.Column="1" Grid.Row="4"  Margin="10"/>
  
  
</Grid>  




</Window>
